<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox fx:controller="pl.yellowduck.netflix90.gui.CategoriesController"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button mnemonicParsing="false" text="Load data" onAction="#loadData">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Button>
      <TableView fx:id="categoriesTable" prefHeight="350.0" prefWidth="600.0">
        <columns>
          <TableColumn editable="false" prefWidth="191.0" text="Name">
              <cellValueFactory>
                  <PropertyValueFactory property="name"/>
              </cellValueFactory>
          </TableColumn>
          <TableColumn editable="false" minWidth="0.0" prefWidth="382.0" text="Description">
              <cellValueFactory>
                  <PropertyValueFactory property="description"/>
              </cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
   </children>
</VBox>
